<div class="d-flex align-items-content-between container mt-5" id="content">
  <div id="primary">
    <img width="500" height="400" src="<%= @user.image_url %>"/>
  </div>

  <div class="ml-5">
    <header id="doctor-header">
      <h1><%=@user.first_name%> <%=@user.last_name%></h1>
      <small>
        <p class="mb-5"><em>Patient</em></p>
      </small>
    </header>

    <div>
      <i class="far fa-envelope p-1"></i> <%=@user.email %>
    </div>

    <div class="p-1 mt-4">
      <p>Age: <%=@user.age %></p>
    </div>

    <div class="p-1">
      <p>Gender: <%=@user.gender %></p>
    </div>

    <div class=mt-2>
      <ul class=list-unstyled>
        <li><%= link_to "Medical Records", user_medical_records_path(@user) %></li>
        <% if current_doctor %>
        <li><%= link_to "Create a new Medical Record", new_user_medical_record_path(@user) %></li>
        <% end %>
        <li><%= link_to "Appointments", appointments_path + "?user=" + @user.id.to_s%></li>
      </ul>
    </div>
  </div>
</div>
